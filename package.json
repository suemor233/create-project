{
  "name": "@suemor/create-project",
  "version": "0.1.0",
  "author": "suemor <suemor233@outlook.com>",
  "description": "A Command Line Tool to start a project",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suemor233/create-project/issues"
  },
  "homepage": "https://github.com/suemor233/create-project#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suemor233/create-project.git"
  },
  "bin": {
    "sr": "bin/cli.js"
  },
  "type": "module",
  "main": "bin/cli.js",
  "files": [
    "dist",
    "bin",
    "package.json"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "bump": {
    "leading": [
      "npm run build"
    ],
    "publish": true,
    "tag": true,
    "commit_message": "chore(release): bump @suemor/suemor-cli to v${NEW_VERSION}"
  },
  "scripts": {
    "prepare": "node ./scripts/check-config.cjs && husky install",
    "dev": "npm run build && node dist/index.mjs",
    "build": "unbuild",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./",
    "lint:fix": "eslint --fix --ext .ts,.tsx,.js,.jsx --quiet ./",
    "lint-staged": "lint-staged",
    "test": "vitest",
    "release": "vv"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "npm run lint"
    ]
  },
  "keywords": [
    "cli",
    "command",
    "tool",
    "create",
    "project"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@innei/bump-version": "^1.5.5",
    "@suemor/eslint-config-ts": "^1.0.1",
    "@suemor/prettier": "^1.0.1",
    "@types/cross-spawn": "^6.0.2",
    "@types/figlet": "^1.5.5",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.18",
    "@types/prompts": "^2.4.2",
    "commander": "^9.4.1",
    "commitlint": "^17.3.0",
    "cross-spawn": "^7.0.3",
    "cz-git": "^1.4.1",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.2",
    "kolorist": "^1.6.0",
    "lint-staged": "13.0.4",
    "prompts": "^2.4.2",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2",
    "vite": "^4.0.3",
    "vitest": "^0.26.2"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "download-git-repo": "^3.0.2",
    "figlet": "^1.5.2",
    "ora": "^6.1.2"
  }
}
